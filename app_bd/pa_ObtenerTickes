ALTER procedure pa_ObtenerTickes(
	@Accion varchar(2),
	@Estado varchar(1)
)as
begin 
	if(@Accion = 'TA')
		begin
			Select TIC.TIC_Ticket,TIC.TIC_Titulo,DEP.DEP_Titulo,CASE WHEN USR.USR_Nombre IS NULL THEN ''  ELSE USR.USR_Nombre END AS USUARIO,'ACTIVO' AS Estado,TIC.TIC_Porcentaje_Completado,CONVERT(VARCHAR, TIC.TIC_Fecha_Vencimiento, 111) as FechaVencimiento 
			from TICKET TIC
			LEFT JOIN USUARIOS USR ON (TIC.USR_Usuario = USR.USR_Usuario) 
			LEFT JOIN DEPARTAMENTOS DEP ON (TIC.DEP_DEPARTAMENTO = DEP.DEP_Departamento) 
			where TIC_Estado = @Estado
	end
end